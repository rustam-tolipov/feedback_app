<div class="p-4 border rounded shadow-sm hover:shadow-md">
  <h2 class="text-xl font-semibold">
    <%= link_to product.name, product_path(product), class: "hover:text-blue-600", data: { turbo: false } %>
  </h2>
  <p class="text-gray-600"><%= product.description %></p>
  <p>avg rating: <span class="text-yellow-500"><%= product.average_rating %></span></p>
  <p>feedbacks count: <%= product.feedback_count %></p>
</div>
