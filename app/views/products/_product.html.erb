<div
  class="flex relative h-full max-h-80 w-full flex-col overflow-hidden rounded-md shadow-lg"
>
  <img
    src="https://images.pexels.com/photos/106399/pexels-photo-106399.jpeg"
    alt=""
    class="h-1/2 w-full object-cover"
  />
  <div class="flex flex-col justify-between h-full p-2">
    <div class="flex h-2/5 items-start justify-between">
      <div class="flex flex-col">
        <span class="text-xs font-thin text-slate-500">
          House
        </span>
        <h3 class="text-md font-semibold hover:text-blue-400"><%= link_to product.name, product_path(product), data: { turbo: false } %></h3>
      </div>
      <div class="flex items-center text-xs gap-1 text-yellow-500">
        <% product.average_rating.to_i.times do |r| %>
          <span>⭐️</span>
        <% end %>
      </div>

      <span class="text-gray-100 absolute flex items-center justify-center top-2 right-2 text-xs bg-yellow-500 rounded-lg py-1 px-2"><%= product.feedback_count %></span>
    </div>

    <div class="grid h-1/5 w-full grid-cols-2 gap-2">
      <div class="h-full w-full rounded bg-slate-200 text-slate-200">
        .
      </div>
      <div class="h-full w-full rounded bg-slate-200 text-slate-200">
        .
      </div>
    </div>
  </div>
</div>
