<div class="max-w-2xl mx-auto p-4 space-y-5">
  <div>
    <h1 class="text-2xl font-bold mb-1"><%= @product.name %></h1>
    <p class="text-gray-700 text-sm"><%= @product.description %></p>
  </div>

  <div class="space-y-3">
    <h2 class="text-xl font-semibold">Feedbacks (<%= @feedbacks.count %>)</h2>

    <% if @feedbacks.any? %>
      <% @feedbacks.each do |feedback| %>
        <div class="border rounded p-3 shadow-sm">
          <p class="text-yellow-500 text-sm mb-1">Rated: <%= feedback.rating %> â˜…</p>
          <p class="text-sm mb-1"><%= feedback.comment %></p>
          <p class="text-xs text-gray-500">
            by <%= feedback.user&.email || "Anonymous" %> at <%= feedback.created_at.strftime("%Y-%m-%d %H:%M") %>
          </p>
        </div>
      <% end %>
    <% else %>
      <p class="text-sm text-gray-500 italic">No feedback yet for this product.</p>
    <% end %>
  </div>

  <div class="pt-5 border-t">
    <h2 class="text-base font-bold mb-3">Leave a Review</h2>
    <%= render "feedbacks/form", product: @product %>
  </div>

  <div class="pt-5">
    <%= link_to "Back to Products", root_path, class: "text-blue-600 text-sm hover:underline" %>
  </div>
</div>
