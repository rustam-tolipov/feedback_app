<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4"><%= @product.name %></h1>
  <p class="text-gray-700 mb-2"><%= @product.description %></p>

  <h2 class="text-xl font-semibold mb-2">Feedbacks (<%= @feedbacks.count %>)</h2>

  <% @feedbacks.each do |feedback| %>
    <div class="mb-4 p-4 border rounded shadow-sm">
      <p class="text-sm text-gray-600">Rated: <%= feedback.rating %> ★</p>
      <p class="text-gray-800"><%= feedback.comment %></p>
      <p class="text-xs text-gray-500">by <%= feedback.user&.email || "Anonymous" %> at <%= feedback.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
  <% end %>

  <%= link_to "← Back to Products", root_path, class: "text-blue-500 hover:underline" %>
</div>
