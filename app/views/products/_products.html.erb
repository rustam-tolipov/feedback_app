<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% products.each do |product| %>
    <div class="p-4 border rounded hover:shadow">
      <h2 class="text-xl font-bold">
        <%= link_to product.name, product_path(product), class: "hover:text-blue-600" %>
      </h2>
      <p class="text-gray-600"><%= product.description %></p>
      <p class="text-yellow-500">â˜… <%= product.average_rating.round(1) %></p>
    </div>
  <% end %>
</div>

<div class="flex justify-center mt-6 space-x-2">
  <div class="mt-4 flex justify-between">
    <% if @page > 1 %>
      <%= link_to "Prev", root_path(params.to_unsafe_h.merge(page: @page - 1)), data: { turbo_frame: "products" }, class: "px-4 py-2 bg-gray-200 rounded" %>
    <% end %>

    <p class="text-sm text-gray-500 mt-2">Page <%= @page %> of <%= @total_pages %></p>

    <% if @page < @total_pages %>
      <%= link_to "Next", root_path(params.to_unsafe_h.merge(page: @page + 1)), data: { turbo_frame: "products" }, class: "px-4 py-2 bg-gray-200 rounded" %>
    <% end %>
  </div>
</div>
