<%= form_with model: [product, feedback],
              data: { turbo_frame: "feedbacks" },
              class: "flex flex-col gap-3 rounded-md border bg-white p-6 shadow-sm" do |form| %>
  <% if feedback.errors.any? %>            
    <%= feedback.errors.full_messages.to_sentence.capitalize %>
  <% end %>
  <p class="text-lg font-semibold text-gray-900">
    Leave a Review
  </p>

  <%= form.select :rating, options_for_select(1..5), {}, class: "w-fit rounded border px-3 py-2 text-sm text-gray-900 outline-none focus:ring-2 focus:ring-blue-500" %>
  <%= form.text_area :comment, rows:4, class: "w-full rounded border px-3 py-2 text-sm text-gray-900 outline-none focus:ring-2 focus:ring-blue-500" %>

  <%= form.submit "Submit", class: "mt-2 w-fit rounded bg-blue-600 px-5 py-2 text-sm text-white transition hover:bg-blue-700"%>
<% end %>