<%= form_with model: [product, Feedback.new], local: true, id: "feedback_form" do |form| %>
  <div class="mb-4">
    <%= form.label :rating, class: "block font-semibold" %>
    <%= form.select :rating, options_for_select(1..5), {}, class: "mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :comment, class: "block font-semibold" %>
    <%= form.text_area :comment, rows: 4, class: "mt-1 block w-full" %>
  </div>

  <%= form.submit "Submit Feedback", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>