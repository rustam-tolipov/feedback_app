<%= form_with url: upload_csv_feedbacks_path, data: { turbo: false }, multipart: true, class: "flex flex-col gap-4" do |form| %>        
  <div>
    <%= form.label :file, "CSV File", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.file_field :file, accept: ".csv", class: "w-full border border-gray-300 rounded px-3 py-2 text-sm" %>
  </div>

  <div>
    <%= form.label :product_id, "Assign to Product", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :product_id,
        options_from_collection_for_select(Product.all, :id, :name),
        prompt: "Select a product",
        class: "w-full border border-gray-300 rounded px-3 py-2 text-sm bg-white" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Upload CSV", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition", data: { action: "click->modal#close" } %>
  </div>
<% end %>